<h1 id="blog-index-heading" class="card card-header bg-dark text-light text-center mb-5">Recent Likes</h1>
<div class="container">
  <% if @likes.exists? %>
    <%= render partial: 'dashboard/likes', collection: @likes %>
  <%else%>
    <div class="card flex-md-row mb-4 shadow-sm h-md-250">
    <div class="card-body d-flex flex-column align-items-start border border-danger">
      <strong class="d-inline-block mb-2 text-danger">Alert</strong>
      <h3 class="mb-0">
        <div class="text-dark">There are No Recent Likes</div>
      </h3>
    </div>
</div>
  <%end%>
</div>

