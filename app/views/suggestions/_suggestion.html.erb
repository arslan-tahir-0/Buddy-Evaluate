<%if suggestion.status == title %>
<div class="suggestion-tab">
  <div class="card">
    <div class="card-body">
      <h5 class="card-title font-weight-bold"><%= suggestion.user.first_name %>  suggested: </h5>
      <p class="card-text"><%= suggestion.suggestion_content %></p>

      <div class="d-flex align-content-between">
        <%= button_to "Reject", blog_suggestion_path(@blog.id, suggestion.id), method: :patch, params: {update_status: 2}, remote: :true, data: {confirm: "Are you sure?"}, class:"btn btn-success mr-2" %>
        <button id="edit-blog" class="btn btn-danger" onclick="openReportEditForm()">Edit Blog</button>
      </div>
    </div>

    <div class="reply-container container card w-75 my-3 bg-light">
      <% if suggestion.replies.present? %>
        <%= render suggestion.replies %>
      <% else %>
        <div class="card-body d-flex flex-column align-items-start no-reply-section">
              <strong class="d-inline-block mb-2 text-danger">Alert</strong>
              <h3 class="mb-0 text-center">
                <div class="text-dark">No replies to show</div>
              </h3>
            </div>
      <%end%>
    </div>


    <%# Reply form, not making partial as it takes time to render %>
    <%= form_with scope:"replies", validate: true,  url:blog_suggestion_replies_path(suggestion.blog_id,suggestion.id), validate: true, method: :post, class: "container w-75", remote: true do |form| %>
      <div>
          <%= form.label "Create an reply" %><br>
        <%= form.text_area :content, class:"form-control" %>
      </div>

      <div>
          <%= form.submit "Reply",class:"btn btn-success my-2" %>
      </div>
    <% end %>

<%# Card ending %>
  </div>


<%# Suggestion tab ending %>
</div>


<%end%>
