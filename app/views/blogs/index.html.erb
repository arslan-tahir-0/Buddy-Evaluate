<div class="container text-center">
<% if current_user.Moderator?%>
  <h1 id="blog-index-heading" class="card card-header bg-dark text-light mb-5">Blog Requests</h1>
<%else%>
<h1 id="blog-index-heading" class="card card-header bg-dark text-light mb-5">List of all Blogs</h1>
<%end%>



<div class="blog-container">
<% if @blogs.size > 0 %>
<%= render @blogs %>
<%= paginate @blogs%>
<% else %>

<div class="card flex-md-row mb-4 shadow-sm h-md-250">
    <div class="card-body d-flex flex-column align-items-start border border-danger">
      <strong class="d-inline-block mb-2 text-danger">Alert</strong>
      <h3 class="mb-0">
        <div class="text-dark">No Blogs available to show</div>
      </h3>
    </div>
</div>
<%end%>

<%# Container div %>
</div>


</div>

