<%= form_with(model:[@blog, @blog.comments.build], local: false, class:"mt-3 container") do |form| %>
  <div class="mb-2">
    <%= form.label "Add your comment" %><br>
    <%= form.text_area :content, class:"form-control" %>
    <%= form.file_field :images, multiple: true, direct_upload: true %>
  </div>

  <div>
    <%= form.submit class:"btn btn-info" %>
  </div>
<% end %>
