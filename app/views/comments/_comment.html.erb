<div class="comment-field">

<div class="card">
    <div class="card-body">
      <div class="card mb-3">
        <p class='font-weight-normal m-2'><span class='text-primary' id='comment-like-count-<%= comment.id %>'><%= comment.get_likes.size.zero? ? "No one" : comment.get_likes.size.to_s + " people"%></span> liked this blog</p>
      </div>
    <% if comment.user.id == current_user.id%>
        <h5 class="card-title font-weight-bold">You commented: </h5>
    <% else %>
        <h5 class="card-title font-weight-bold"><%= comment.user.first_name %>  commented: </h5>
    <%end%>
      <p class="card-text"><%= comment.content %></p>

      <div class="d-flex align-content-between">
        <div class="comment-buttons" style="display:flex">
            <%= render(:partial => "likes/commentlikes", :locals => {:comment => comment}) %>
            <% if comment.user.id != current_user.id%>
            <button id="report-form-show" class="btn btn-danger" value="<%= comment.id%> <%= @blog.id %>" onclick="sayHello(this.value)" >Report</button>
            <%end%>
      </div>
    </div>


<div class="d-flex comment-images-container comment-attachment-container">
  <% comment.images.each do |image| %>
  <%= image_tag image, class: 'rounded my-3 mr-3 d-block', size:'200x200'%>
  <%end%>

</div>

<div class="reply-container container card w-75 my-3 bg-light">
      <% if comment.replies.exists? %>
        <%= render comment.replies %>
      <% else %>
            <div class="card-body d-flex flex-column align-items-start no-reply-section">
              <strong class="d-inline-block mb-2 text-danger">Alert</strong>
              <h3 class="mb-0 text-center">
                <div class="text-dark">No replies to show</div>
              </h3>
            </div>
      <%end%>
    </div>



</div>

<%# Reply form, not making partial as it takes time to render %>
    <%= form_with scope:"replies", url:blog_comment_replies_path(comment.blog_id, comment.id), method: :post, class: "container w-75", remote: true, validate: true do |form| %>
      <div>
          <%= form.label "Create an reply" %><br>
          <%= form.text_area :content, class:"form-control" %>
      </div>

      <div>
          <%= form.submit "Reply",class:"btn btn-success my-2" %>
      </div>
    <% end %>
</div>
